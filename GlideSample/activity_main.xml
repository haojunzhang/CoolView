<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/bt_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal" />

            <ImageView
                android:id="@+id/iv_normal"
                android:layout_width="160dp"
                android:layout_height="90dp" />

            <Button
                android:id="@+id/bt_center_crop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Center Crop" />

            <ImageView
                android:id="@+id/iv_center_crop"
                android:layout_width="160dp"
                android:layout_height="90dp" />

            <Button
                android:id="@+id/bt_circle_crop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Circle Crop" />

            <ImageView
                android:id="@+id/iv_circle_crop"
                android:layout_width="160dp"
                android:layout_height="90dp" />

            <Button
                android:id="@+id/bt_fade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fade" />

            <ImageView
                android:id="@+id/iv_fade"
                android:layout_width="160dp"
                android:layout_height="90dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>